<AdditionScreen>:
    md_bg_color: (1,1,1,1)


    MDGridLayout:
        rows : 2


        ################################################################
        # Тут ввод пользователя
        
        MDFloatLayout:
            size_hint: (1,10)
            
            MDGridLayout: 
                size_hint: (0.7,0.25)
                pos_hint: {'center_x': 0.5,'center_y': 0.7}
                rows : 3

                MDFloatLayout:
                   
                    MDTextField:
                        pos_hint: {'x': 0.0,'center_y': 0.5}
                        id: sum_text_input 
                        input_filter: 'float'
                   
                        MDTextFieldHintText:
                            text: "Введите сумму"
                
                MDFloatLayout:

                    MDButton:
                        id: dropdown_button
                        pos_hint: {'x': 0.0,'center_y': 0.5}
                        style: "tonal"
                        on_release: root.menu.open()

                        MDButtonText:
                            id: dropdown_button_text
                            text: 'Выберите тип расхода'

                MDFloatLayout:
                    
                    Label:
                        pos_hint: {'x': 0.0,'center_y': 0.5}
                        color: (0,0,0,1)
                        text: 'Тут будет дата'


        ################################################################
        # Кнопочки
        
        MDNavigationBar:

            BaseMDNavigationItem:
                icon: "database-plus"
                text: "Сохранить"

            BaseMDNavigationItem:
                icon: "keyboard-backspace"
                text: "Назад"
                on_release: root.go_to_main_screen()


        