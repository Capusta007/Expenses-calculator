<AdditionScreen>:
    md_bg_color: (1,1,1,1)


    sum_text_input : sum_text_input

    MDGridLayout:
        rows : 2


        ################################################################
        # Тут ввод пользователя
        
        MDFloatLayout:
            size_hint: (1,10)
            
            MDGridLayout: 
                size_hint: (0.5,0.5)
                pos_hint: {'center_x': 0.5,'center_y': 0.7}
                rows : 3

                MDBoxLayout:
                    size_hint: (1,.3)
                   
                    MDTextField:
                        id: sum_text_input 
                        input_filter: 'float'
                   
                        MDTextFieldHintText:
                            text: "Введите сумму"
                
                MDBoxLayout:
                    # MDDropdownMenu:
                
                MDBoxLayout:

                    Label:
                        color: (0,0,0,1)
                        text: 'Тут будет дата'


        ################################################################
        # Кнопочки
        
        MDNavigationBar:

            BaseMDNavigationItem:
                icon: "database-plus"
                text: "Сохранить"

            BaseMDNavigationItem:
                icon: "keyboard-backspace"
                text: "Назад"
                on_release: root.go_to_main_screen()


        